model User {
  id           Int          @id @default(autoincrement())
  email        String       @unique
  passwordHash String
  simulations  Simulation[] // relationship
}

model Simulation {
  id                 Int      @id @default(autoincrement())
  userId             Int      @map("user_id")
  user               User     @relation(fields: [userId], references: [id])
  title              String
  venueCapacity      Int
  expectedAttendance Int
  ticketPrice        Float
  artistFee          Float
  gearCost           Float
  barSplitPercent    Float
  totalBarSales      Float
  grossRevenue       Float
  barRevenue         Float
  totalCost          Float
  netProfit          Float
  breakEven          Int
  createdAt          DateTime @default(now())
}
